#!/bin/sh
#
# usage: ./bin/deploy [APP]
#
#   APP defaults to staging
#
###
set -e

case "${1:-staging}" in
  staging)
    docker-compose run web ./bin/build-slug
    ./bin/upload-slug
    ;;
  production)
    heroku pipeline:promote --app novproject-staging
    heroku restart --app novproject-production
    ;;
  *)
    sed '/^# \(usage:.*\)/!d; s//\1/' "$0" >&2
    exit 64
    ;;
esac

